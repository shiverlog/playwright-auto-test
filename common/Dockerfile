FROM ubuntu:24.04

# ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app/common

# ê¸°ë³¸ íŒ¨í‚¤ì§€ ì„¤ì¹˜
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    ca-certificates \
    lsb-release \
    && rm -rf /var/lib/apt/lists/*

# Node.js ì„¤ì¹˜ (í•„ìš”í•œ ë²„ì „ ì§€ì •)
RUN curl -fsSL https://deb.nodesource.com/setup_16.x | bash - && \
    apt-get install -y nodejs && \
    apt-get clean

# strict-ssl=false ì„¤ì •, ì‚¬ë‚´ë§ SSL ìš°íšŒ ì˜µì…˜
ENV NODE_TLS_REJECT_UNAUTHORIZED=0

# í”„ë¡ì‹œ ì„¤ì • (í•„ìš”í•œ ê²½ìš° ì„¤ì •, ë¶ˆí•„ìš”í•˜ë©´ ì œê±°)
ENV HTTP_PROXY=http://proxy.company.com:8080
ENV HTTPS_PROXY=http://proxy.company.com:8080
ENV NO_PROXY=localhost,127.0.0.1

# NPM ì„¤ì • ë³€ê²½ (í•„ìš”í•œ ê²½ìš°)
RUN npm config set strict-ssl false && \
    npm config set registry https://registry.npmmirror.com && \
    npm cache clean --force

# ì• í”Œë¦¬ì¼€ì´ì…˜ ì¢…ì†ì„± ì„¤ì¹˜
COPY package.json package-lock.json ./
RUN npm install --legacy-peer-deps

# common íŒ¨í‚¤ì§€ ì½”ë“œ ì¶”ê°€
COPY common/ .

# common íŒ¨í‚¤ì§€ë¥¼ ê¸€ë¡œë²Œ íŒ¨í‚¤ì§€ë¡œ ë“±ë¡ (npm link ë°©ì‹)
RUN npm link

# ì»¨í…Œì´ë„ˆê°€ ìœ ì§€ë˜ë„ë¡ ì„¤ì •
CMD ["tail", "-f", "/dev/null"]
