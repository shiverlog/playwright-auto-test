/**
 * Description : launch.json - 📌 VS Code에서 Debug 및 Testing 실행 설정 파일
 * Author : Shiwoo Min
 * Date : 2024-03-10
 */
{
  "version": "0.2.0",
  "configurations": [
    // e2e 로 시작하는 모든 테스트 폴더 실행 (Headless)
    {
      "name": "Run Playwright All E2E Tests (Headless)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "e2e/**", "--reporter=html"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },

    // e2e 로 시작하는 모든 테스트 폴더 실행
    {
      "name": "Run Playwright All E2E Tests (Headed - Debug)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "e2e/**", "--headed", "--debug"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },

    // e2e-pc 폴더의 테스트 실행
    {
      "name": "Run Playwright E2E-PC",
