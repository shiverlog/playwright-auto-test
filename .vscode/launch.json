{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Playwright All E2E Tests (Headless)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/playwright",
            "args": [
                "test",
                "e2e-*", // e2e- 로 시작하는 모든 테스트 폴더 실행
                "--reporter=html"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Run Playwright All E2E Tests (Headed - Debug)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/playwright",
