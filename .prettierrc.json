{
  "arrowParens": "avoid",
  "trailingComma": "all",
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 100,
  "bracketSpacing": true,
  "semi": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^github",
    "^vscode",
    "^docs",
    "^common",
    "^e2e/pc",
    "^e2e/mw",
    "^e2e/and",
    "^e2e/ios",
    "^e2e/api",
    "^mosaic-db",
    "^pubsub",
    "^[.]",
    ".scss$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"]
}
