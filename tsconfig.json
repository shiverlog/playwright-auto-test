{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common/*": ["common/*"],
      "@e2e/*": ["e2e/*"],
      "@e2e/aos/*": ["e2e/aos/*"],
      "@e2e/api/*": ["e2e/api/*"],
      "@e2e/ios/*": ["e2e/ios/*"],
      "@e2e/mw/*": ["e2e/mw/*"],
      "@e2e/pc/*": ["e2e/pc/*"],
      "@batch/*": ["batch/*"],
      "@pubsub/*": ["pubsub/*"],
      "@mosaic-db/*": ["mosaic-db/*"],
      "@sample/*": ["sample/*"]
    },
    "outDir": "dist",
    "rootDir": "./",
    "module": "CommonJS",
    "target": "ES6",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "common",
    "e2e",
    "e2e/aos",
    "e2e/api",
    "e2e/ios",
    "e2e/mw",
    "e2e/pc",
    "batch",
    "pubsub",
    "mosaic-db",
    "sample",
    "tests",
    "tests-examples",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules", "dist", "example", "speedtest", "zas-is"]
}
